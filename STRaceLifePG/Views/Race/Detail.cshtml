@model STRaceLifePG.Models.Race

<h2 class="text-center">Race Details</h2>

<div class="d-flex justify-content-center">
    <div class="card mb-3" style="width: 700px; height: 35rem; overflow: hidden;">
        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
            <img src="@Model.ImageUrl" class="card-img-top" alt="Race Image" style="height: 12rem; object-fit: cover;">
        }
        else
        {
            <svg class="bd-placeholder-img card-img-top" width="100%" height="12rem" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: Thumbnail" preserveAspectRatio="xMidYMid slice" focusable="false">
                <title>Placeholder</title>
                <rect width="100%" height="100%" fill="#55595c"></rect>
                <text x="50%" y="50%" fill="#eceeef" dy=".3em">No Image</text>
            </svg>
        }
        <div class="card-body" style="overflow-y: auto;">
            <h5 class="card-title">Description</h5>
            <p class="card-text">@Model.Description</p>

            <h5 class="card-title">Category</h5>
            <p class="card-text">@Model.Category</p>

            <h5 class="card-title">Owner</h5>
            <p class="card-text">@Model.User?.Name</p>

            <h5 class="card-title">Club</h5>
            <p class="card-text">@Model.Club?.Title</p>

            <h5 class="card-title">Capital</h5>
            <p class="card-text">@Model.Capital</p>

            <h5 class="card-title">City</h5>
            <p class="card-text">@Model.City</p>

            <h5 class="card-title">Street</h5>
            <p class="card-text">@Model.Street</p>

            <h5 class="card-title">Date</h5>
            <p class="card-text">@Model.StartDate</p>
        </div>
    </div>
</div>
<div class="d-flex justify-content-center mt-3">
    <button class="btn btn-secondary" onclick="history.back()">Back</button>
</div>
